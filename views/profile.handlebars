{{#if reviews.length}}
  <div class="card review-list">

    <div class="card-body">
      <div class="create-card">
        Posted Reviews
      </div>
      {{#each reviews as |review|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a
                class="black-text text-size"
                href="/review/{{review.id}}"
              >{{review.title}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-outline-warning my-2 my-sm-0 search-btn create-btn"
              data-id="{{review.id}}"
            >Delete</button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{/if}}

