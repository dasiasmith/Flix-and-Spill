<div class="card">
  <div class="create-card">
    Create a New Review
  </div>
  {{!-- <h5 class="card-header">Welcome, {{name}}!</h5> --}}
  <div class="card-body">

    <form class="form new-review-form">
      <div class="form-group">
        <label for="review-title" class="black-text">Review Title:</label>
        <input
          class="form-input form-control"
          type="text"
          id="review-title"
          name="review-title"
        />
      </div>

      <div class="form-group">
        <label for="review-content" class="black-text">Review:</label>
        <textarea
          class="form-input form-control"
          id="review-content"
          name="review-content"
        ></textarea>
      </div>
      <div class="form-group">
        <button
          type="submit"
          class="btn btn-outline-warning my-2 my-sm-0 create-btn"
        >Create</button>
      </div>
    </form>
    {{! <a href="#" class="btn btn-primary">Go somewhere</a> }}
  </div>
</div>
<hr id="topTenHr" class="rounded" />

{{#if reviews.length}}
  <div class="card review-list">

    <div class="card-body">
      <div class="post-card">
        Posted Reviews
      </div>
      {{#each reviews as |review|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4 class="border-bottom"><a
                class="black-text text-size"
                href="/review/{{review.id}}"
              >{{review.title}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-outline-warning my-2 my-sm-0 search-btn create-btn"
              data-id="{{review.id}}"
            >Delete</button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{/if}}

<script src="/js/profile.js"></script>