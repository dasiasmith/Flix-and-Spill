<div id="topTen" class="container-fluid container text-center">
  <div class="col-12 col-md-12">
      <h1>All Reviews</h1>
      <hr id="topTenHr" class="rounded">
  </div>
{{#each reviews as |review| }}
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-xl-7 col-lg-8 col-md-10 col-12 text-center mb-5">
      <div class="card">
        <div class="row d-flex">
          {{!-- Test profile picture to see why content isn't showing --}}
          <div class=""> <img class="profile-pic" src="https://i.imgur.com/V3ICjlm.jpg"> </div>
            <div class="d-flex flex-column">
                <h3 class="mt-2 mb-0">{{review.user.name}}</h3>
                {{!-- <div> We can uncomment if we want users to give stars
                    <p class="text-left"><span class="text-muted">4.0</span> <span class="fa fa-star star-active ml-3"></span> <span class="fa fa-star star-active"></span> <span class="fa fa-star star-active"></span> <span class="fa fa-star star-active"></span> <span class="fa fa-star star-inactive"></span></p>
                </div> --}}
            </div>
            <div class="ml-auto">
                <p class="text-muted pt-5 pt-sm-3">{{review.date_created}}</p>
            </div>
        </div>
        <div class="row text-left">
            <h4 class="black-text mt-3">{{review.title}}</h4>
            <p class="content">{{review.review}}</p>
        </div>
        {{!-- Like and unlike feature here --}}
        <div class="row text-left mt-4">
            <div class="like mr-3 vote"> <img src="https://i.imgur.com/mHSQOaX.png"><span class="black-text pl-2">20</span> </div>
            <div class="unlike vote"> <img src="https://i.imgur.com/bFBO3J7.png"><span class="text-muted pl-2">4</span> </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>



{{/each}}