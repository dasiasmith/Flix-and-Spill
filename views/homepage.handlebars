<!-- Loop over each object in the projects array -->
<div id="topTen" class="container-fluid container text-center">
  <div class="col-12 col-md-12" id="topReviews">
      <h1>All Reviews</h1>
      <hr id="topTenHr" class="rounded">
  </div>
{{#each reviews as |review| }}
{{!-- {{#each review.comments}} --}}
<div class="container">
    <blockquote class="quote-box">
      <a class ="title-font" href="/review/{{review.id}}">{{review.title}}</a>
        <h2 class="card-title"></h2>
        <hr>
      <p class="quotation-mark">
        â€œ
      </p>
      <p class="quote-text">
        {{review.review}} 
      </p>
      <hr>
       
      <div class="blog-post-actions">
            <p class="blog-post-bottom pull-left">
            - {{review.user.name}}
            </p>
           {{#each review.comments}}
            <p>
                <a class="btn btn-primary lnr lnr-eye" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                View Comments
                </a>
                <a class="btn btn-primary lnr lnr-pencil" href="http://localhost:3001/review/{{review.id}}">
                    Add Comment
                </a>
            </p>
                <div class="collapse" id="collapseExample">
                    <div class="card card-body">
                    {{user.name}}: {{comment}}
                    </div>
                </div>
                  {{/each}}
      </div>
    
    </blockquote>
    {{!-- {{/each}} --}}
    {{/each}}
</div>
