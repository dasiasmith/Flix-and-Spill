<div class="text-center">
  <h2>{{name}}</h2>
  {{!-- <p>{{{get_status}}}</p> --}}
  <p>{{title}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    {{!-- <span {{get_status}} aria-label="status"></span> --}}
    <span class="status_medal">{{review}}</span>
  </p>
  <p>
    <button class="btn btn-primary">Movie Reviews!</button>
    <button class="btn btn-primary">Show Reviews!</button>
  <div>
  <form class="form new-comment-form">
     <div class="form-group">
      <button type="submit" class="btn btn-primary">Post Comment</button>
    </div>
    <div class="form-group">
      <label for="comment">comment on this review:</label>
      <textarea class="form-input" id="comment" title="comment"></textarea>
    </div>
  </form>
</div>
<div class="col-md-6 comment-list">
     {{#each comment}}
    {{!-- {{#each blog.comments as |comment|}} --}}
      <div class="row mb-2 row-list">
        <div class="col-md-8">
          <p class="comment">{{comment}}</p>
          <div class="meta">
            {{user.name}}
            created on
            {{format_date date_created}}
          </div>
        </div>
      </div>
      {{/each}}
  </div>
    {{! like button  }}
    <button onclick="Toggle1()" id="btnh1" class="like-btn">
      <i class="fas fa-heart"></i>
    </button>
  </p>
  <div>{{comment.comment}}</div>
</div>
<script src="/like/script.js"></script>
<script src = "/js/comment.js"></script>
{{! <script src="/js/upvote.js"></script> }}